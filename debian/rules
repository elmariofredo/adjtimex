#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

package=adjtimex

build:
	$(checkdir)
	./configure
	make CFLAGS="-O2 -g -Wall"

	touch build

clean:
	$(checkdir)
	-rm -f build
	-make distclean
	-rm -f *.o Makefile config.* adjtimex `find . -name "*~"`
	-rm -rf debian/tmp debian/files* core debian/substvars

binary-indep:	checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:	checkroot build
	$(checkdir)
	-rm -rf debian/tmp
	install -d debian/tmp
	cd debian/tmp && install -d `cat ../dirs`
	install -s -m 755 adjtimex debian/tmp/usr/sbin
#	install -m 644 adjtimex.8 debian/tmp/usr/man/man8
#	install -m 644 debian/adjtimexconfig.8 debian/tmp/usr/man/man8
#	(cd debian/tmp/usr/man/man8; gzip -9f adjtimex.8 adjtimexconfig.8)
	install -m 755 debian/adjtimexconfig debian/tmp/usr/sbin
	install -m 644 debian/copyright debian/tmp/usr/doc/$(package)
	install -m 755 debian/rc debian/tmp/etc/rc.boot/$(package)
	install -m 644 README debian/tmp/usr/doc/$(package)
# Must have debmake installed for this to work. Otherwise please copy
# /usr/bin/debstd into the debian directory and change debstd to debian/debstd
	debstd README debian/README.debian
	#mv debian/tmp/usr/share/doc/adjtimex/* debian/tmp/usr/doc/adjtimex/
	#rm -r debian/tmp/usr/share/doc/
	#mv debian/tmp/usr/share/man debian/tmp/usr/man
	if [ -d debian/tmp/usr/share/doc ]; then \
		mv debian/tmp/usr/share/doc/adjtimex/* debian/tmp/usr/doc/adjtimex/; \
		rm -r debian/tmp/usr/share/doc/; \
	fi
	if [ -d debian/tmp/usr/share/man ]; then \
		mv debian/tmp/usr/share/man debian/tmp/usr/man; \
	fi
#	gzip -9f debian/tmp/usr/doc/adjtimex/changelog.Debian
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
	dpkg-gencontrol
	dpkg --build debian/tmp ..

define checkdir
	test -f debian/rules
endef

# Below here is fairly generic really

binary:		binary-indep binary-arch

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
